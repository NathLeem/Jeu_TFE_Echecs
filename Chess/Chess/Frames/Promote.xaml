<Page x:Class="Chess.Frames.Promote"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chess.Frames"
      mc:Ignorable="d" 
      Background="#262421"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Promote">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" x:Name="queen" Content="Queen"  Width="150" Height="80" Background="DarkGreen" Foreground="WhiteSmoke"/>
        <Button Grid.Column="1" x:Name="bishop" Content="Bishop" Width="150" Height="80" Background="DarkGreen" Foreground="WhiteSmoke"/>
        <Button Grid.Column="2" x:Name="horse" Content="Horse"  Width="150" Height="80" Background="DarkGreen" Foreground="WhiteSmoke"/>
        <Button Grid.Column="3" x:Name="tower" Content="Tower"  Width="150" Height="80" Background="DarkGreen" Foreground="WhiteSmoke"/>
    </Grid>
</Page>
