<Window x:Class="Chess.Promotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Background="#262421"
        Title="Promotion" Height="200" Width="50">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" x:Name="queen" Content="Queen" Height="40" Width="40" Background="#07bc0c" Foreground="WhiteSmoke"/>
        <Button Grid.Row="1" x:Name="bishop" Content="Bishop" Height="40" Width="40" Background="#07bc0c" Foreground="WhiteSmoke"/>
        <Button Grid.Row="2" x:Name="horse" Content="Horse" Height="40" Width="40" Background="#07bc0c" Foreground="WhiteSmoke"/>
        <Button Grid.Row="3" x:Name="tower" Content="Tower" Height="40" Width="40" Background="#07bc0c" Foreground="WhiteSmoke"/>
    </Grid>
</Window>
